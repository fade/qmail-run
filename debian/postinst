#! /bin/sh
# postinst script for qmail-run
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see /usr/doc/packaging-manual/
#
# quoting from the policy:
#     Any necessary prompting should almost always be confined to the
#     post-installation script, and should be protected with a conditional
#     so that unnecessary prompting doesn't happen if a package's
#     installation fails and the `postinst' is called with `abort-upgrade',
#     `abort-remove' or `abort-deconfigure'.

function upgrade_0_1_x {
    # restart qmail-smtpd/log/run
    svc -t /etc/qmail/qmail-smtpd/log || true

    # check for /etc/qmail/qmail-start
    if [ -L /var/service/qmail-start ]; then
	rm -f /var/service/qmail-start
    fi
    if [ -d /etc/qmail/qmail-start ]; then
	# supervise running?
	if svok /etc/qmail/qmail-start; then
		# disable service
		svc -dx /etc/qmail/qmail-start
	fi
    fi

    # notify root
    env MAILNAME="qmail-run upgrade" MAILUSER=root \
	predate qmail-inject root < \
	/usr/share/doc/qmail-run/README.upgrade
}

case "$1" in
    configure)
	if [ ! -f /etc/aliases ]; then
		echo "creating default /etc/aliases..."
		cp /usr/share/doc/qmail-run/examples/aliases /etc/aliases
	fi
	if [ ! -f /etc/mailname ]; then
		MAILNAME=`hostname -f`
		echo "creating default /etc/mailname: \"$MAILNAME\"..."
		echo $MAILNAME > /etc/mailname
	fi
	MAILNAME=`cat /etc/mailname`
	if [ ! -f /var/qmail/control/defaulthost ]; then
		echo "writing \"$MAILNAME\" to control/defaulthost..."
		echo $MAILNAME > /var/qmail/control/defaulthost
	fi
#	/usr/local/bin/tcprules /etc/qmail/tcp.smtp.cdb \
#		/etc/qmail/tcp.smtp.tmp < /etc/qmail/tcp.smtp
	qmailctl cdb
	newaliases

	chown -R qmaill:qmail /var/log/qmail-send
	chown -R qmaill:qmail /var/log/qmail-smtpd
	chmod 2755 /var/log/qmail-send
	chmod 2755 /var/log/qmail-smtpd

	# upgrade from version < 0.2.0?
	if ! [ "${2#0.[01].}" = "$2" ]; then
		upgrade_0_1_x
	fi

	# link service dir qmail-stmpd
	if [ ! -L /var/service/qmail-smtpd ]; then
	    ln -s /etc/qmail/qmail-smtpd /var/service/
	fi
	# link service dir qmail-send
	if [ ! -L /var/service/qmail-send ]; then
	    ln -s /etc/qmail/qmail-send /var/service/
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
