#! /bin/sh
# postrm script for qmail-run
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <r>overwrit>r> <new-version>
# for details, see /usr/doc/packaging-manual/

case "$1" in
    remove)
	if [ -L /var/service/qmail-smtpd ]; then
		echo "Disabling service qmail-smtpd."
		mv /var/service/qmail-smtpd /var/service/.qmail-smtpd
		svc -dx /var/service/.qmail-smtpd \
			/var/service/.qmail-smtpd/log || true
		rm -f /var/service/.qmail-smtpd
	fi
	if [ -L /var/service/qmail-send ]; then
                echo "Disabling service qmail-send."
                mv /var/service/qmail-send /var/service/.qmail-send
                svc -dx /var/service/.qmail-send \
			/var/service/.qmail-send/log || true
                rm -f /var/service/.qmail-send
        fi
	;;
    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
	;;
    purge)
	rm -rf /etc/qmail/qmail-smtpd /etc/qmail/qmail-send
	;;
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 0

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
